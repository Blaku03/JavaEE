<?xml version="1.0" encoding="UTF-8"?>
<server description="Jakarta EE example server">
    <featureManager>
        <feature>servlet-6.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>faces-4.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>persistence-3.1</feature>
        <feature>websocket-2.1</feature>
        <feature>appSecurity-5.0</feature>
        <feature>enterpriseBeansLite-4.0</feature>
    </featureManager>

    <!-- Logging configuration - simple format showing only message -->
    <logging consoleLogLevel="INFO" 
            traceSpecification="com.example.gym.*=info" 
            consoleSource="message" 
            consoleFormat="simple"
            messageFormat="simple"/>

    <!-- Basic User Registry for FORM authentication -->
    <basicRegistry id="basic" realm="defaultRealm">
        <user name="admin" password="admin123" />
        <user name="john" password="john123" />
        <user name="jane" password="jane123" />
        <group name="admin">
            <member name="admin" />
        </group>
        <group name="user">
            <member name="john" />
            <member name="jane" />
        </group>
    </basicRegistry>

    <!-- Application security bindings -->
    <application-bnd>
        <security-role name="admin">
            <group name="admin" />
        </security-role>
        <security-role name="user">
            <group name="user" />
            <group name="admin" />
        </security-role>
    </application-bnd>

    <library id="h2-driver-library">
        <fileset dir="${wlp.install.dir}/usr/servers/defaultServer/lib/global/" includes="h2-*.jar"/>
    </library>

    <dataSource id="GymDB" jndiName="jdbc/GymDB">
        <jdbcDriver javax.sql.XADataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.ConnectionPoolDataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.DataSource="org.h2.jdbcx.JdbcDataSource"
                    libraryRef="h2-driver-library"/>

        <properties URL="jdbc:h2:mem:gymdb;DB_CLOSE_DELAY=-1"/>

    </dataSource>

    <jpa defaultJtaDataSourceRef="jdbc/GymDB" />

</server>